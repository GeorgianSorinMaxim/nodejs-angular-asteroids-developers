<!doctype html>
<html ng-app="myApp">
<head>
    <title>Stylinger</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="https:////maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.6.0.js"></script>

    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="./css/menu.css">

    <script src="./controller/index.js"></script>
    <script src="./controller/geolocation.js"></script>
</head>
<body ng-controller="indexController">
  <div class="wrapper">
      <div class="container">

        <header class="clearfix">
          <div class="container">

            <a id="logo" href="/"><h1>Stylinger</h1></a>

            <div class="header-left">
              <label for="open">
                <span class="hidden-desktop"></span>
              </label>
              <input type="checkbox" name="" id="open">
              <nav>
                <a href="getlisted">Get Listed</a>
                <a href="#">Meet the team</a>
                <a href="#">Contact</a>
              </nav>
            </div>

            <% if (!user) { %>
            <div class="header-right">
                <p><a id="loginLink" href="/login" class="dropdown-link">Login</a><a id="registerLink" href="/signup" class="dropdown-link">Register</a></p>
            </div>
            <% } else { %>
            <div class="header-right">
              <div class="button-dropdown">Hi, <%= user.local.profile.firstname %> &#x25BC;
                  <ul class="dropdown">
                    <li><a href="/profile" class="dropdown-link">My Profile</a></li>
                    <li><a href="/bookings" class="dropdown-link">My Bookings</a></li>
                    <li><a href="/reviews" class="dropdown-link">My Reviews</a></li>
                    <li><a href="/logout" class="dropdown-link">Logout</a></li>
                  </ul>
              </div>
            </div>
            <% } %>
          </div>
      </div>
      </header>
      <section class="clearfix">
      </section>

      <div class="searchStyle">
          <p class="heading">Your beauty, your choice</p>
          <form id="search" action="/results" method="get" >
              <div id="searchContainer" style="overflow: hidden; padding-top: 10px;">
                  <input type="text" name="location" ng-model="location" placeholder="City or ZIP" required/>
                  <select name="serviceType" ng-model="serviceType"  ng-options="option.value as option.name for option in typeOptions" class="dropdownSearch" required></select>
                  <input id="searchBtn" type="submit" value="Search" />
              </div>
          </form>

          <br>
      </div>

      <div class="scroll">
          <p>SCROLL</p>
          <img src="./css/img/scrollS.png" alt="Scroll"/>
      </div>

    </div>

    <div class="rowContent">
          <p class="headerHome">Explore the beauty world in {{address}}</p>

          <section id="content">
            <img src="./css/img/hairdresserS.png"/>
            <p>Hairdresser</p>
            <p>78 listed</p>
          </section>

          <section id="middle">
            <img src="./css/img/spaS.png"/>
            <p>Spa</p>
            <p>19 listed</p>
          </section>

          <aside id="sidebar">
            <img src="./css/img/barberS.png"/>
            <p>Barbershop</p>
            <p>11 listed</p>
          </aside>

          <form action="/" method="POST" >
              <input type="hidden" name="_method" value="put" />
              <input type="hidden" name="location" value="{{address}}"/>
              <input id="searchBtn" type="submit" value="View All Listings" />
          </form>
    </div>

    <div class="rowContentSecond">
