<!doctype html>
<html ng-app="myApp">
<head>
    <title>NEWS Registration / Notification</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.6.0.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <!-- okeyNav -->
    <link rel="stylesheet" href="./css/okayNav.min.css" media="screen">
    <script src="./js/jquery.okayNav.js"></script>

    <link rel="stylesheet" href="./css/style.css">
    <script src="./controller/news.js"></script>

</head>
<body ng-controller="newsController">
  <header id="header">
      <nav role="navigation" id="nav-main" class="okayNav">
          <ul>
              <li><a href="/news">NEWS</a></li>
              <li><a href="/newsList">NEWS List</a></li>
              <li><a href="/patients">Patients List</a></li>
              <li><a href="/send">Send Message</a></li>
          </ul>
      </nav>
  </header>

  </br>

  <main>
    <h1>Self-measured National Early Warning Score (NEWS)</h1>
    <h2>Register your Physiological Parameters using this form.</h2>

    <form action="/news" method="POST">
        <label for="cpr" class="labelForm">CPR</label>
        <input type="text" id="cpr" name="cpr" placeholder="CPR" required/> </br>
        
        <label for="firstname" class="labelForm">First Name</label>
        <input type="text" id="firstname" name="firstname" placeholder="First Name" required/> </br>

        <label for="lastname" class="labelForm">Last Name</label>
        <input type="text" id="lastname" name="lastname" placeholder="Last Name" required/> </br>

        <label for="respiration" class="labelForm">Respiration Rate</label>
        <select ng-model="resp" ng-options="option.value as option.name for option in respirationOptions"></select> </br> 
        <input name="respiration" type="hidden" value="{{resp}}"/>

        <label for="oxygenSat" class="labelForm">Oxygen Saturations</label>
        <select ng-model="oxyS" ng-options="option.value as option.name for option in oxySatOptions" required></select> </br>
        <input name="oxygenSat" type="hidden" value="{{oxyS}}"/>

        <label for="oxygen" class="labelForm">Any Supplemental Oxygen</label>
        <select ng-model="oxy" ng-options="option.value as option.name for option in oxyOptions" required></select> </br>
        <input name="oxygen" type="hidden" value="{{oxy}}"/>

        <label for="temp" class="labelForm">Temperature</label>
        <select ng-model="temp" ng-options="option.value as option.name for option in tempOptions" required></select> </br>
        <input name="temp" type="hidden" value="{{temp}}"/>

        <label for="systolic" class="labelForm">Systolic BP</label>
        <select ng-model="sys" ng-options="option.value as option.name for option in sysOptions" required></select> </br>
        <input name="systolic" type="hidden" value="{{sys}}"/>

        <label for="heartRate" class="labelForm">Heart Rate</label>
        <select ng-model="hr" ng-options="option.value as option.name for option in hrOptions" required></select> </br>
        <input name="heartRate" type="hidden" value="{{hr}}"/>

        <label for="consciousness" class="labelForm">Level of Consciousness</label>
        <select ng-model="cons" ng-options="option.value as option.name for option in conscOptions" required></select> </br>
        <input name="consciousness" type="hidden" value="{{cons}}"/>

        <div class="buttons">
          <button class="button">Register NEWS</button>
        </div>
    </form>

  </main>
<script>
  var navigation = $('#nav-main').okayNav();
</script>
</body>
</html>
